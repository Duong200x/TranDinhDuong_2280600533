@model TranDinhDuong_2280600533.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
    </dl>
</div>

@if (Model.ProductImages != null && Model.ProductImages.Any())
{
    <h4>Product Images:</h4>
    <div class="row">
        @foreach (var image in Model.ProductImages)
        {
            <div class="col-md-3">
                <img src="@image.ImageUrl" class="img-thumbnail" style="width:100%; height:auto;" alt="@Model.Name" />
            </div>
        }
    </div>
}
else
{
    <p>No images available for this product.</p>
}

<p>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
